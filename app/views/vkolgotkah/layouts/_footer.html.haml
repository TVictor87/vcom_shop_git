%footer#footer
  .row
    .top-block
      .container
        .block-left
          %a.button-sizes{href: ''}= t('pages.size_table')
          %nav.sub-nav
            %ul
              %li
                %a{href: ''}= t('pages.order_status')
              %li
                %a{href: ''}= t('pages.return_and_exchange')
        %a.banner{href: ''}
          = image_tag 'images/banner.gif'
      .block-subscribe
        = t('pages.subscribe_text')
        %form.subscribe-form{action: '#'}
          %fieldset
            %input{placeholder: t('pages.email_placeholder'), type: 'text'}/
            %input{type: 'submit', value: t('pages.email_send')}/
