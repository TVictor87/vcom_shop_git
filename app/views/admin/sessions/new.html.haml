.login-box
  .login-logo
    %a{href: ''}
      %b> VcomShop
      Admin
  .login-box-body
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      = notice || alert
      .form-group.has-feedback
        = f.email_field :email, autofocus: true, class: 'form-control', placeholder: t('activerecord.attributes.user.email')
        %span.glyphicon.glyphicon-envelope.form-control-feedback
      .form-group.has-feedback
        = f.password_field :password, autocomplete: 'off', class: 'form-control', placeholder: t('activerecord.attributes.user.password')
        %span.glyphicon.glyphicon-lock.form-control-feedback
      .row
        .col-xs-8
          .checkbox
            %label
              = f.check_box :remember_me
              = t('activerecord.attributes.user.remember_me')
        .col-xs-4
          = f.button t('devise.sessions.new.sign_in'), type: 'submit', class: 'btn btn-primary btn-block btn-flat'