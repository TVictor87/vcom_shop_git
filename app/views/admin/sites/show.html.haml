%section.content-header
  %h1
    = t('admin.sites.title')
    %small= @site.try("title_#{locale}") || @site.title_ru

%section.content
  .box
    .box-body
      %form{ class: 'show_form'}
        %p
          %b Title ru:
          = @site.title_ru
        %p
          %b Title uk:
          = @site.title_uk
        %p
          %b Title en:
          = @site.title_en
        %p
          %b Constant name:
          = @site.constant_name

      .editor_actions
        = link_to 'Edit', edit_admin_site_path(@site), class: 'btn btn-primary'
        = link_to 'Back', admin_sites_path, class: 'btn btn-primary'
