%section.content-header
  %h1
    = t('admin.categories.title')
    %small= t('helpers.links.edit')

%section.content
  .box
    .box-body
      = render 'form'
    .box-footer
      = link_to t('helpers.links.edit'), 'javascript:', class: 'btn btn-primary', onclick: "$('.edit_category').submit(); $('body').animate({scrollTop: $('.has-error').offset().top});"