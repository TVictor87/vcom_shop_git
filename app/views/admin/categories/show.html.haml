%section.content-header
	%h1
		= t('admin.categories.title')
		%small= @category.try("title_#{locale}") || @category.title_ru

%section.content
	.box
		.box-body
			%form{ class: 'show_form'}
				%p
					%b= t('activerecord.attributes.image.image')
				- if @category.image?
					%td= image_tag @category.image.url, class: 'medium_img'
				- else
					%td -
				%p
					%b= t('activerecord.attributes.category.option_group_ids')
					= @category.option_groups.pluck("title_#{locale}").join(', ')
				%p
					%b= t('activerecord.attributes.category.name_ru')
					= @category.name_ru
				%p
					%b= t('activerecord.attributes.category.name_uk')
					= @category.name_uk
				%p
					%b= t('activerecord.attributes.category.name_en')
					= @category.name_en
				%p
					%b= t('activerecord.attributes.category.title_ru')
					= @category.title_ru
				%p
					%b= t('activerecord.attributes.category.title_uk')
					= @category.title_uk
				%p
					%b= t('activerecord.attributes.category.title_en')
					= @category.title_en
				%p
					%b= t('activerecord.attributes.category.keywords_ru')
					= @category.keywords_ru
				%p
					%b= t('activerecord.attributes.category.keywords_uk')
					= @category.keywords_uk
				%p
					%b= t('activerecord.attributes.category.keywords_en')
					= @category.keywords_en
				%p
					%b= t('activerecord.attributes.category.description_ru')
					= raw @category.description_ru
				%p
					%b= t('activerecord.attributes.category.description_uk')
					= raw @category.description_uk
				%p
					%b= t('activerecord.attributes.category.description_en')
					= raw @category.description_en
				%p
					%b= t('activerecord.attributes.category.text_ru')
					= raw @category.text_ru
				%p
					%b= t('activerecord.attributes.category.text_uk')
					= raw @category.text_uk
				%p
					%b= t('activerecord.attributes.category.text_en')
					= raw @category.text_en
				%p
					%b= t('activerecord.attributes.category.priority')
					= @category.priority

			.editor_actions
				= link_to 'Edit', edit_admin_category_path(@category), class: 'btn btn-primary'
				= link_to 'Back', admin_categories_path, class: 'btn btn-primary'
